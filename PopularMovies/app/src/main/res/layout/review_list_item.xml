<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_recyclerView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="@dimen/gap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/review_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap"
        android:src="@drawable/ic_user"
        />

    <TextView
        android:id="@+id/review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/review_image"
        android:layout_alignTop="@id/review_image"

        tools:text="author"
        android:layout_marginBottom="@dimen/gap"/>


    <TextView
        android:id="@+id/review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/review_image"
        android:layout_below="@id/review_author"
        android:paddingEnd="@dimen/side_gap"
        tools:text="@string/cont"
        android:paddingBottom="@dimen/space"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space"
            android:layout_below="@id/review_content"
            android:background="@color/rv_color"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>